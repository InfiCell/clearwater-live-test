#!/bin/bash

# @file postinst
#
# Copyright (C) Metaswitch Networks 2017
# If license terms are provided to you in a COPYING file in the root directory
# of the source code repository by which you are accessing this code, then
# the license outlined in that COPYING file applies to your use.
# Otherwise no rights are granted except for those provided to you by
# Metaswitch Networks in a separate written agreement.

#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

NAME=clearwater-live-verification
log_directory=/var/log/$NAME

add_section() {
    file=$1
    tag=$2
    delta=$3
    { echo "#+$tag"
      cat $delta
      echo "#-$tag" ; } >> $file
}

#
# Function to ensure logging directory is in place and has the right permissions
#
setup_logging() {
    if [ ! -d "$log_directory" ]; then
        mkdir -p $log_directory
    fi
    chmod 777 $log_directory
}

case "$1" in
    configure)
        setup_logging

        # The standard Ubuntu ruby package includes out-dated gems, and we need
        # the latest.  Update them.
        REALLY_GEM_UPDATE_SYSTEM=true gem update --system

        pushd /usr/share/clearwater/$NAME
        pushd vendor/cache
        gem install bundler*.gem
        popd
        bundle install --local
        popd

        # Restart the alarm agent
        if [ -x "/etc/init.d/clearwater-snmp-alarm-agent" ]; then
          service clearwater-snmp-alarm-agent stop || /bin/true
        fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
